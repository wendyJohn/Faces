<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/f_yout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="3dp" >

            <TextView
                android:id="@+id/equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS信息确认"
                android:textColor="#d81e06"
                android:layout_gravity="center"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/f_yout"
        android:background="@color/normal_bg_color" />

    <RelativeLayout
        android:id="@+id/rl_dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/viewa"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:id="@+id/youta"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="姓名:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/bg_edittext_selector"
                android:hint="请输入名称"
                android:padding="5dip"
                android:singleLine="true"
                android:textColor="#4a5764"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/youtb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/youta"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="手机号码:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/bg_edittext_selector"
                android:hint="请输入手机号码"
                android:padding="5dip"
                android:singleLine="true"
                android:textColor="#4a5764"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/youtc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/youtb"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="身份证:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/identitycrad"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/bg_edittext_selector"
                android:hint="请输入个人身份证"
                android:padding="5dip"
                android:singleLine="true"
                android:textColor="#4a5764"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_yout"
            android:layout_width="match_parent"
            android:layout_below="@id/youtc"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="求救类型:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firecontrol"
                    android:button="@null"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/radio_button_state"
                    android:text="火警"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <RadioButton
                    android:id="@+id/medicalcare"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio_button_state"
                    android:text="医疗"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_dialog_edit"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_dialog_button_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_dialog_button_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确认"
            android:textColor="#d81e06"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>