<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002e66">

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="物资存取使用说明"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <View
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/a"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#CFCFCF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b">


        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ma_step1"
            android:gravity="center"
            android:text="查物资"
            android:textColor="@color/white"
            android:textSize="30sp"
            />

        <ImageView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/c"
            android:src="@drawable/direction_a" />

        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/d"
            android:paddingLeft="60dp"
            android:drawableTop="@drawable/ma_step2"
            android:gravity="center"
            android:text="选择柜门"
            android:textColor="@color/white"
            android:textSize="30sp"
            />
        <ImageView
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/e"
            android:src="@drawable/direction_a" />

        <TextView
            android:id="@+id/g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/f"
            android:paddingLeft="60dp"
            android:drawableTop="@drawable/ma_step4"
            android:gravity="center"
            android:text="人脸识别验证"
            android:textColor="@color/white"
            android:textSize="30sp"
            />


    </RelativeLayout>


</RelativeLayout>