<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_bicon"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/videobackground"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <com.example.juicekaaa.fireserver.utils.FullVideoView
            android:id="@+id/videos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:src="@drawable/title_icon" />

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/shimmer_tv"
                android:text="救援一公里      安全无小事"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A9A9A9"
                android:typeface="serif"
                android:textSize="45sp"/>


        </LinearLayout>

        <com.example.juicekaaa.fireserver.utils.SecureView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/funtion_material"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:background="@drawable/select_function"
                android:gravity="center"
                android:text="物资"
                android:textSize="30sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/funtion_opendoor"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/select_function"
                android:gravity="center"
                android:text="开门"
                android:textSize="30sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/funtion_sos"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/select_function"
                android:gravity="center"
                android:text="SOS"
                android:textSize="30sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/funtion_propaganda"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/select_function"
                android:gravity="center"
                android:text="宣传"
                android:textSize="30sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="26dp"
            android:drawableTop="@drawable/smallprogram"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="26sp"
            android:text="微信小程序"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/online_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="26dp"
            android:drawableLeft="@drawable/help_bicon"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="在线帮助"
            android:textSize="26sp"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>